extends navigation

block mainContent
    h1 #{quote.Name}
    p Welcome to Redling for CPQ
    p #{quote.Name}
    p #{quote.Account_Name__c}
    p #{quote.Opportunity_Name__c}
    p #{quote.Quote_Owner__c}
    p #{quote.SBQQ__PaymentTerms__c}
    p #{quote.SBQQ__Status__c}
    p #{quote.SBQQ__NetAmount__c}
    br
    h1 #{quote.Name} Documents
    table
        tr
            th Document Name
            th Output Format
            th Version
            th Link
        for doc in docs
            tr
                td #{doc.Name}
                td #{doc.SBQQ__OutputFormat__c}
                td #{doc.SBQQ__Version__c}
                td
                    button(class="ms-Button ms-Button--primary docLink" documentId='#{doc.SBQQ__ViewRecordId__c}')
                        span(class="ms-Button-label") Open
